<%- include('partials/header') %>

<h1 class="text-center">Sign Up</h1>
<hr>
<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <div class="col-auto">
            <form class="form-group" action="/sign-up" method="POST">
                <div class="form-group">
                    <label for="username" hidden>Create a username</label>
                    <input type="text" class="form-control" name="username" placeholder="Username" maxlength="100" required>
                </div>
                <div class="form-group">
                    <label for="password" hidden>Create a password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" minlength="6" required>
                </div>
                <div class="form-group">
                    <label for="password2" hidden>Confirm password</label>
                    <input type="password" class="form-control" name="password2" placeholder="Confirm Password" minlength="6" required>
                </div>
                <div class="form-group">
                    <label for="firstName" hidden>First Name</label>
                    <input type="text" class="form-control" name="firstName" placeholder="First name" maxlength="100" required>
                </div>
                <div class="form-group">
                    <label for="lastName" hidden>Last Name</label>
                    <input type="text" class="form-control" name="lastName" placeholder="Last name" maxlength="100" required>
                </div>
                <div class="form-group">
                    <label for="email" hidden>Create email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="avatar" hidden>Avatar</label>
                    <input type="text" class="form-control" name="avatar" placeholder="Avatar url">
                </div>
                <div class="form-group">
                    <label for="admin-code">Enter admin code if you have</label>
                    <input type="password" class="form-control" name="adminCode" placeholder="Admin code">
                </div>
                <button class="btn btn-primary" type="submit">Sign Up</button>
                <small class="form-text text-muted">We'll never share your personal info with anyone else.</small>
            </form>
            <p>
                Already have an account? <a href="/login">Log in here</a>
            </p>
        </div>
    </div>
</div>

