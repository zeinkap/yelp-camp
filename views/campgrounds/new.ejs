<% include ../partials/header %>

<h1 class="text-center">Add New Campground</h1>
<br>
<div class="container-fluid">
  <div class="row justify-content-center align-items-center">
    <div class="col-auto">
      <form class="form-group" action="/campgrounds" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
          <label for="image">Image Url</label>
          <input class="form-control" type="text" name="image" placeholder="Image url">
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input class="form-control" type="number" name="price" placeholder="19.99" min="1.00" max="999.99" step="0.01" required>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" rows="10" name="description" placeholder="Californiaâ€™s Sierra Nevada mountains." maxlength="300"></textarea>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA" required>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>