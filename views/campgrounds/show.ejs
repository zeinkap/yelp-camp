<% include ../partials/header %>

<div class="toolbar text-right" role="toolbar" aria-label="Toolbar with edit/delete options">
    <div class="btn-group" role="group">
        <a class="btn btn-secondary btn-sm" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
        <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger btn-sm">Delete</button>
        </form>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h5>
                Yelp Camp
                <small class="text-muted">Thrilling adventures await!</small>
            </h5>
            <div class="list-group">
                <ul class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <figure class="figure">
                <img class="figure-img img-fluid img-thumbnail" src="<%= campground.image %>" alt="campground-image">
                <figcaption class="figure-caption">
                    <h5 class="float-right">$9.00/night</h5>
                    <h4><a><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted By <%= campground.author.username %></em> 
                    </p>
                </figcaption>
            </figure>

            <div class="text-right" style="padding-bottom: 0.75rem">
                <a class="btn btn-info btn-sm" href="/campgrounds/<%=campground._id%>/comments/new">Leave a review</a>
            </div>

            <div class="card" style="margin-bottom: 0.75rem">
                <div class="card-header">Reviews</div>
                <div class="card-body">
                    <% campground.comments.forEach( (comment) => { %>
                        <span class="float-right">10 days ago</span>
                        <h5 class="card-title"><%= comment.author.username %></h5>
                        <p class="card-text"><%= comment.text %></p>
                        <hr>
                    <%});%>
                </div>   
            </div>

        </div>
    </div>
</div>

<% include ../partials/footer %>