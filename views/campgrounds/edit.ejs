<%- include('../partials/header') %>

<div class="container">
  <div class="row">
    <div style="width: 50%; margin: 25px auto;">
      <h1 class="text-center">Edit <%= campground.name %></h1>
      
      <!--Must overide method to treat as PUT since HTTP only handles GET and POST requests not PUT-->
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control form-control-lg" type="text" name="campground[name]" value="<%= campground.name %>" required> 
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input class="form-control-file border" type="file" name="image" accept="image/*">
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input class="form-control form-control-lg" type="number" name="campground[price]" value="<%= campground.price %>" min="1.00" max="999.99" step="0.01" required>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control form-control-lg" name="campground[description]" rows="5" cols="75" wrap="hard" maxlength="400" required><%= campground.description %></textarea>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control form-control-lg" type="text" name="location" id="location" value="<%= campground.location %>" required>
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Update</button>
        </div>
      </form>

      <a href="/campgrounds">Go back</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>